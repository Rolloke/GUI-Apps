inline BOOL CServer::CanRectangleQuery() const
{
	BOOL b = FALSE;

	if (IsDV())
	{
		b = (    m_iMajorVersion == 1 
			&& ((m_iMinorVersion==4 && m_iSubVersion > 1) || m_iMinorVersion > 4)
			|| m_iMajorVersion>1);
	}
	return b;
}
