inline BOOL CServer::CanRectangleQuery() const
{
	BOOL b = FALSE;

	if (IsDTS())
	{
		b = (    m_iMajorVersion == 1 
			&& ((m_iMinorVersion==4 && m_iSubVersion > 1) || m_iMinorVersion > 4)
			|| m_iMajorVersion>1);
	}
	else
	{
		b = (    m_iMajorVersion == 4 
			&& (m_iMinorVersion > 2)
			|| m_iMajorVersion>4);
	}
	return b;
}
