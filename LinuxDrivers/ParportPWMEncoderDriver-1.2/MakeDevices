MAJOR=253

mknod /dev/encoder0 c $MAJOR 0
mknod /dev/encoder1 c $MAJOR 1
mknod /dev/encoder2 c $MAJOR 2
mknod /dev/encoder3 c $MAJOR 3
mknod /dev/encoder4 c $MAJOR 4
mknod /dev/encoder5 c $MAJOR 5
mknod /dev/encoder6 c $MAJOR 6
mknod /dev/encoder7 c $MAJOR 7

mknod /dev/encoder8 c $MAJOR 8
mknod /dev/encoder9 c $MAJOR 9
mknod /dev/encoder10 c $MAJOR 10
mknod /dev/encoder11 c $MAJOR 11
mknod /dev/encoder12 c $MAJOR 12
mknod /dev/encoder13 c $MAJOR 13
mknod /dev/encoder14 c $MAJOR 14
mknod /dev/encoder15 c $MAJOR 15

PWMMAJOR=254

mknod /dev/pwm0 c $PWMMAJOR 0
mknod /dev/pwm1 c $PWMMAJOR 1
mknod /dev/pwm2 c $PWMMAJOR 2
mknod /dev/pwm3 c $PWMMAJOR 3
mknod /dev/pwm4 c $PWMMAJOR 4
mknod /dev/pwm5 c $PWMMAJOR 5
mknod /dev/pwm6 c $PWMMAJOR 6
mknod /dev/pwm7 c $PWMMAJOR 7
